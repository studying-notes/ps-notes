// 将设置放入此文件中以覆盖默认设置
{
    // ================ Normal ================
    "files.autoSave": "afterDelay",
    // 启用后，将不会显示扩展建议的通知
    "extensions.ignoreRecommendations": false,
    // 滚轮敏感度
    "editor.mouseWheelScrollSensitivity": 5,
    // 文件拖放是否确认
    "explorer.confirmDragAndDrop": false,
    // 控制编辑器在键入一行后是否自动格式化该行
    "editor.formatOnType": true,
    // 对大型文件进行特殊处理，禁用某些内存密集型功能
    "editor.largeFileOptimizations": false,
    // 控制资源管理器是否在把文件删除到废纸篓时进行确认
    "explorer.confirmDelete": false,
    // 文件更改监视
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/*/**": true
    },
    "git.ignoreLegacyWarning": true,
    "editor.suggestSelection": "first",
    // ================ UI ================
    "workbench.startupEditor": "none",
    "editor.fontFamily": "等线 Regular",
    // "editor.fontFamily": "PingFang SC Medium",
    "editor.fontSize": 14,
    "window.zoomLevel": 1,
    "window.menuBarVisibility": "toggle",
    // 控制边栏的位置，可显示在工作台的左侧或右侧
    "workbench.sideBar.location": "left",
    // 缩略图
    "editor.minimap.enabled": false,
    // 状态栏
    "workbench.statusBar.visible": false,
    // 活动栏可见性
    "workbench.activityBar.visible": false,
    // 启用/禁用文件导航路径
    "breadcrumbs.enabled": false,
    // 将在视区宽度处换行
    "editor.wordWrap": "on",
    // ================ Terminal ================
    // 默认终端
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    // 阻止开启时输出一段话
    "terminal.integrated.shellArgs.windows": [
      "-nolog"
    ],
    // 终端字体控制
    "terminal.integrated.fontFamily": "Fira Code, SimHei",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    // ================ 远程配置部分 ================
    "remote.SSH.allowLocalServerDownload": false,
    "remote.SSH.useLocalServer": true,
    // ================ Python ================
    "python.linting.pylintArgs": [
      "--max-line-length=120" // 一行最大字符数
    ],
    "python.linting.flake8Args": [
      "--max-line-length=120"
    ],
    // 在执行时将工作目录改变到文件所在目录
    "python.terminal.executeInFileDir": true,
    // 禁用自动激活终端
    "python.terminal.activateEnvironment": false,
    "python.analysis.memory.keepLibraryAst": true,
    "python.languageServer": "Pylance",
    "python.showStartPage": false,
    "python.linting.flake8Enabled": true,
    // ================ Go ================
    "go.formatTool": "goimports",
    // ================ HTML ================
    "[html]": {
      "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
      "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[json]": {
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    // ================ C ================
    "C_Cpp.updateChannel": "Insiders",
    // ================ C ================
    "editor.tokenColorCustomizations": {
      "textMateRules": [
        {
          "scope": "log.error",
          "settings": {
            "foreground": "#af1f1f",
            "fontStyle": "bold"
          }
        },
        {
          "scope": "log.warning",
          "settings": {
            "foreground": "#f4ad42",
            "fontStyle": ""
          }
        }
      ]
    },
    "files.associations": {
      "*.log.*": "log"
    },
    "logFileHighlighter.customPatterns": [
      {
        "pattern": "info",
        "foreground": "#22aa22"
      },
      {
        "pattern": "error",
        "foreground": "#af1f1f",
        // "background": "#344323"
      },
      {
        "pattern": "\\[.*\\]",
        "background": "#333333"
      }
    ],
    "jupyter.sendSelectionToInteractiveWindow": false,
    // ================ File Header ================
    "fileheader.configObj": {
      "createFileTime": true,
      "language": {
        "languagetest": {
          "head": "/$$",
          "middle": " $ @",
          "end": " $/"
        }
      },
      "autoAdd": true,
      "autoAddLine": 100,
      "autoAlready": true,
      "annotationStr": {
        "head": "/*",
        "middle": " * @",
        "end": " */",
        "use": false
      },
      "headInsertLine": {
        "php": 2,
        "sh": 2
      },
      "beforeAnnotation": {
        "文件后缀": "该文件后缀的头部注释之前添加某些内容"
      },
      "afterAnnotation": {
        "文件后缀": "该文件后缀的头部注释之后添加某些内容"
      },
      "specialOptions": {
        "特殊字段": "自定义比如LastEditTime/LastEditors"
      },
      "switch": {
        "newlineAddAnnotation": true
      },
      "supportAutoLanguage": [],
      "prohibitAutoAdd": [
        "json",
        "ini",
        "txt",
        "md"
      ],
      "prohibitItemAutoAdd": [
        "项目的全称, 整个项目禁止自动添加头部注释, 可以使用快捷键添加"
      ],
      "moveCursor": true,
      "dateFormat": "YYYY-MM-DD HH:mm:ss",
      "atSymbol": [
        "@",
        "@"
      ],
      "atSymbolObj": {
        "文件后缀": [
          "头部注释@符号",
          "函数注释@符号"
        ]
      },
      "colon": [
        ": ",
        ": "
      ],
      "colonObj": {
        "文件后缀": [
          "头部注释冒号",
          "函数注释冒号"
        ]
      },
      "filePathColon": "/", // 路径分隔符替换
      "showErrorMessage": false,
      "wideSame": false,
      "wideNum": 13,
      "CheckFileChange": false,
      "createHeader": true,
      "useWorker": false,
      "designAddHead": false,
      "headDesignName": "random",
      "headDesign": false,
      "cursorModeInternal": false
    },
    "fileheader.customMade": {
      "Date": "Do not edit", // 文件创建时间
      "LastEditors": "Rustle Karl", // 文件最后编辑者
      "LastEditTime": "Do not edit", // 文件最后编辑时间
      // "FilePath": "Do not edit" // 文件在项目中的相对路径自动更新
    }
  }